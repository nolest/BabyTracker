# Xcode 專案設定檔

# 基本設定
PRODUCT_NAME = "寶寶生活記錄專業版"
PRODUCT_BUNDLE_IDENTIFIER = com.example.babytracker
DEVELOPMENT_TEAM = XXXXXXXXXX # 請替換為您的開發團隊ID
CODE_SIGN_IDENTITY = "iPhone Developer"
CODE_SIGN_STYLE = Automatic

# 部署設定
IPHONEOS_DEPLOYMENT_TARGET = 14.0
TARGETED_DEVICE_FAMILY = 1,2 # iPhone 和 iPad
SWIFT_VERSION = 5.0
ENABLE_BITCODE = NO

# 能力設定
ENABLE_CLOUDKIT = YES
ENABLE_HEALTHKIT = NO
ENABLE_NOTIFICATIONS = YES
ENABLE_BACKGROUND_MODES = YES
BACKGROUND_MODES = remote-notification

# 隱私設定
NSCameraUsageDescription = "用於拍攝寶寶照片和記錄成長里程碑"
NSPhotoLibraryUsageDescription = "用於選擇寶寶照片和記錄成長里程碑"
NSLocationWhenInUseUsageDescription = "用於記錄寶寶活動地點（可選）"

# 第三方庫設定
SWIFT_TREAT_WARNINGS_AS_ERRORS = NO
ALWAYS_EMBED_SWIFT_STANDARD_LIBRARIES = YES
