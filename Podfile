platform :ios, '14.0'
   
target '寶寶生活記錄專業版' do
  use_frameworks!
  
  # 核心依賴
  pod 'Combine-CombineExt'
  pod 'SwiftUI-Introspect'
  
  # 數據庫
  pod 'RealmSwift'
  
  # 網絡
  pod 'Alamofire'
  
  # UI 組件
  pod 'Charts'
  pod 'SnapKit'
  
  # 工具
  pod 'KeychainAccess'
  pod 'CryptoSwift'
  
  # 測試依賴
  target '寶寶生活記錄專業版Tests' do
    inherit! :search_paths
    pod 'Quick'
    pod 'Nimble'
  end
end